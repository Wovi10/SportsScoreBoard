@using SportsScoreBoard.Models
<MudNavMenu>
    <MudNavLink Match="NavLinkMatch.All" Href="/" Class="mt-5">Home</MudNavLink>
    @foreach (var sportInfo in StaticValues.AllSports)
    {
        <MudNavLink Match="NavLinkMatch.All" Href="@sportInfo.Route">
            <MudText>@sportInfo.Sport</MudText>
        </MudNavLink>
    }
</MudNavMenu>