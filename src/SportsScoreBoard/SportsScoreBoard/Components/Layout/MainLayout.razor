@using SportsScoreBoard.Models
@inherits LayoutComponentBase

<MudThemeProvider @ref="_mudThemeProvider" @bind-IsDarkMode="_isDarkMode" Theme="_theme"/>
<MudPopoverProvider />
<MudDialogProvider />

<MudLayout Class="d-flex flex-column" Style="height: 100vh">
    <MudAppBar Dense="_appBarDense">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="DrawerToggle"/>
        <MudText>
            <MudLink Href="/" Color="Color.Inherit">Scoreboards</MudLink>
            @if(!string.IsNullOrWhiteSpace(SubpageTitle))
            {
                <MudText Inline="true">| @SubpageTitle</MudText>
            }
        </MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Href="/settings"/>
        <MudToggleIconButton @bind-Toggled="_isDarkMode"
                             Icon="@Icons.Material.Filled.DarkMode"
                             ToggledIcon="@Icons.Material.Filled.LightMode"/>
    </MudAppBar>
    <MudDrawer Open="@_drawerOpen" ClipMode="@_navbarClipMode" Breakpoint="@_navbarBreakpoint" Elevation="1" Class="pt-3">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="mt-8 px-8 flex-grow-1 overflow-auto" Style="height: 100%">
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>