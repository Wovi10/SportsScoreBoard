@using SportsScoreBoard.Models
@inherits LayoutComponentBase

<MudThemeProvider @ref="_mudThemeProvider" @bind-IsDarkMode="_isDarkMode" Theme="MyMudThemeProvider.MyLightTheme"/>
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Dense="_appBarDense">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="DrawerToggle"/>
        <MudText Typo="Typo.h6">
            <MudNavLink Match="NavLinkMatch.All" Href="/">Scoreboards</MudNavLink>
        </MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Href="/settings"/>
        <MudToggleIconButton @bind-Toggled="_isDarkMode"
                             Icon="@Icons.Material.Filled.DarkMode"
                             ToggledIcon="@Icons.Material.Filled.LightMode"/>
    </MudAppBar>
    <MudDrawer Open="@_drawerOpen" ClipMode="@_navbarClipMode" Breakpoint="@_navbarBreakpoint" Elevation="1" Class="pt-3">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="mt-8 px-8">
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>