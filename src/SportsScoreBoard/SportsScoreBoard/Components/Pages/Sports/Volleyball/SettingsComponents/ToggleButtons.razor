@using SportsScoreBoard.Components.Shared
@using SportsScoreBoard.Models.Volleyball
<MudStack Row="true" Wrap="Wrap.Wrap" Class="mb-3">
    <SettingsButton OnClick="OnShowServeClick"
                    Active="Settings.ShowServing"
                    Text="Show serving team"/>
    <SettingsButton OnClick="OnShowSetsClick"
                    Active="Settings.ShowSets"
                    Text="Show sets"/>
    <SettingsButton OnClick="OnShowTimeoutsClick"
                    Active="Settings.ShowTimeouts"
                    Text="Show timeouts"/>
    <SettingsButton OnClick="OnShowPreviousSetsClick"
                    Active="Settings.ShowPreviousSets"
                    Text="Show previous set scores"/>
    <SettingsButton OnClick="OnShowManualScoresClick"
                    Active="Settings.ShowManualScoring"
                    Text="Show manual scoring"/>
    <SettingsButton OnClick="OnShowTeamNamesClick"
                    Active="Settings.ShowTeamNames"
                    Text="Show team names"/>
</MudStack>

@code {

    [Parameter] public required VolleyballSettings Settings { get; set; }
    [Parameter] public required Action ToggleShowServing { get; set; }
    [Parameter] public required Action ToggleShowSets { get; set; }
    [Parameter] public required Action ToggleShowTimeouts { get; set; }
    [Parameter] public required Action ToggleShowPreviousSets { get; set; }
    [Parameter] public required Action ToggleManualScoring { get; set; }
    [Parameter] public required Action ToggleShowTeamNames { get; set; }
    [Parameter] public required Action ToggleShowTimer { get; set; }

    private void OnShowServeClick(MouseEventArgs obj) 
        => ToggleShowServing.Invoke();

    private void OnShowSetsClick(MouseEventArgs obj) 
        => ToggleShowSets.Invoke();

    private void OnShowTimeoutsClick(MouseEventArgs obj) 
        => ToggleShowTimeouts.Invoke();

    private void OnShowPreviousSetsClick(MouseEventArgs obj) 
        => ToggleShowPreviousSets.Invoke();

    private void OnShowManualScoresClick(MouseEventArgs obj) 
        => ToggleManualScoring();

    private void OnShowTeamNamesClick(MouseEventArgs obj) 
        => ToggleShowTeamNames.Invoke();

    private void OnShowTimerClick(MouseEventArgs obj) 
        => ToggleShowTimer.Invoke();
}