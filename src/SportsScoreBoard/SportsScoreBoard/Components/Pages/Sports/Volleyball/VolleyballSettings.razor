<MudExpansionPanel Class="flex-end">
    <TitleContent>
        <MudText>Settings</MudText>
    </TitleContent>
    <ChildContent>
        <MudStack Row="true">
            <MudButton OnClick="OnResetScoresClick" Color="Color.Primary" Variant="Variant.Filled">
                Reset scores
            </MudButton>
            <MudButton OnClick="OnShowTimerClick" Color="Color.Primary" Variant="Variant.Filled">
                Show timer
            </MudButton>
            <MudButton OnClick="OnShowTimeoutsClick" Color="Color.Primary" Variant="Variant.Filled">
                Show timeouts
            </MudButton>
            <MudButton OnClick="OnShowTeamNamesClick" Color="Color.Primary" Variant="Variant.Filled">
                Show team names
            </MudButton>
            <MudButton OnClick="OnShowSetsClick" Color="Color.Primary" Variant="Variant.Filled">
                Show sets
            </MudButton>
            <MudButton OnClick="OnSHowServeClick" Color="Color.Primary" Variant="Variant.Filled">
                Show serving team
            </MudButton>
            <MudButton OnClick="OnShowPreviousSetsClick" Color="Color.Primary" Variant="Variant.Filled">
                Show previous sets
            </MudButton>
        </MudStack>
        <MudStack Class="d-flex align-end" Row="true" Style="max-width: 400px;">
            <MudText>
                Best of
            </MudText>
            <MudSelect Class="flex-grow-0" T="int" @bind-Value="_bestOf">
                <MudSelectItem T="int" Value="3"/>
                <MudSelectItem T="int" Value="5"/>
                <MudSelectItem T="int" Value="7"/>
            </MudSelect>
            (First to @FirstTo)
        </MudStack>
    </ChildContent>
</MudExpansionPanel>