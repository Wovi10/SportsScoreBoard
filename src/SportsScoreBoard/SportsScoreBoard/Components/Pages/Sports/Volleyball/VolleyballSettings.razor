@using SportsScoreBoard.Components.Shared
<MudExpansionPanel Class="flex-end">
    <TitleContent>
        <MudText>Settings</MudText>
    </TitleContent>
    <ChildContent>
        <MudStack Row="true">
            <SettingsButton OnClick="OnResetScoresClick" Text="Reset scores"/>
            <SettingsButton OnClick="OnShowServeClick" Text="Show serving team"/>
            <SettingsButton OnClick="OnShowSetsClick" Text="Show sets"/>
            <SettingsButton OnClick="OnShowTimeoutsClick" Text="Show timeouts"/>
            <SettingsButton OnClick="OnShowPreviousSetsClick" Text="Show previous set scores"/>
            <SettingsButton OnClick="OnShowTeamNamesClick" Text="Show team names"/>
            <SettingsButton OnClick="OnShowTimerClick" Text="Show timer"/>
        </MudStack>
        <MudStack Class="d-flex align-end" Row="true" Style="max-width: 400px;">
            <MudText>
                Best of
            </MudText>
            <MudSelect Class="flex-grow-0" T="int" @bind-Value="_bestOf">
                <MudSelectItem T="int" Value="3"/>
                <MudSelectItem T="int" Value="5"/>
                <MudSelectItem T="int" Value="7"/>
            </MudSelect>
            (First to @FirstTo)
        </MudStack>
    </ChildContent>
</MudExpansionPanel>