@page "/volleyball"
@using SportsScoreBoard.Components.Pages.Sports.Volleyball.ScoreComponents
@rendermode InteractiveServer

<PageTitle>Volleyball</PageTitle>

<MudContainer Class="d-flex align-items-end flex-column" Style="height: 100%">
    <MudContainer Class="flex-grow-1">
        <VolleyballScoreboard 
            @ref="_volleyballScoreboardSettings"
            Game="Game"
            IncrementHome="IncrementHome"
            IncrementAway="IncrementAway"
            HomeNameChanged="ChangeHomeName"
            AwayNameChanged="ChangeAwayName"/>
    </MudContainer>

    <MudContainer Class="overflow-auto mb-4">
        <VolleyballSettingsComponent
            @ref="_volleyballSettingsComponent"
            Game="Game"
            ResetScore="ResetScore"
            ResetSets="ResetSets"
            ToggleShowServing="ToggleShowServing"
            ToggleShowSets="ToggleShowSets"
            />
    </MudContainer>
</MudContainer>