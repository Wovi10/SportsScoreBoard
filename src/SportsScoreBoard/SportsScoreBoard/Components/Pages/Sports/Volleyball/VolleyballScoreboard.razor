@rendermode InteractiveServer

<MudGrid>
    <MudItem  xs="12">
        <MudText Typo="Typo.h3" Align="Align.Center">Volleyball</MudText>
    </MudItem>
    <MudItem xs="6" @onclick="OnHomeScoredClick">
        <MudCard Elevation="25" Class="rounded-lg pb-4 pointer-event">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudTextField T="string" Variant="Variant.Text"
                                  ValueChanged="e => OnHomeNameChanged(e)" 
                                  Value="@Game.Home.Name">
                    </MudTextField>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent Class="mx-auto mt-4 position-relative">
                <MudText Align="Align.Center" Class="position-absolute top-50 start-50">@Game.Score.Home</MudText>
                <MudIcon Icon="@Icons.Material.Filled.Circle" Size="Size.Small" 
                         Class="position-absolute bottom-0 end-0"></MudIcon>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6" @onclick="OnAwayScoredClick">
        <MudCard Elevation="25" Class="rounded-lg pb-4 pointer-event">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudTextField T="string" Variant="Variant.Text"
                                  ValueChanged="e => OnAwayNameChanged(e)"
                                  Value="@Game.Away.Name">
                    </MudTextField>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent Class="mx-auto mt-4">
                <MudText Align="Align.Center">@Game.Score.Away</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>