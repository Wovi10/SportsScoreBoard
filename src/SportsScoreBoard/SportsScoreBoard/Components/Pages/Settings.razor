@page "/settings"
@using SportsScoreBoard.Components.Layout

<MudContainer Class="mt-6 mx-8">
    <MudItem Class="mb-3">
        <MudSelect Label="Select clip mode" T="DrawerClipMode" ValueChanged="OnDrawerClipModeChanged" Value="_drawerClipMode">
            <MudSelectItem Value="@DrawerClipMode.Never">Not clipped</MudSelectItem>
            <MudSelectItem Value="@DrawerClipMode.Docked">Drawer is docked</MudSelectItem>
            <MudSelectItem Value="@DrawerClipMode.Always">Always</MudSelectItem>
        </MudSelect>
    </MudItem>
    <MudSelect Label="Select breakpoint" T="Breakpoint" Value="@_navbarBreakpoint"
               ValueChanged="OnDrawerBreakPointChanged">
        <MudSelectItem Value="@Breakpoint.None">None</MudSelectItem>
        <MudSelectItem Value="@Breakpoint.Sm">Small</MudSelectItem>
        <MudSelectItem Value="@Breakpoint.Md">Medium</MudSelectItem>
        <MudSelectItem Value="@Breakpoint.Lg">Large</MudSelectItem>
        <MudSelectItem Value="@Breakpoint.Xl">Extra Large</MudSelectItem>
    </MudSelect>
    <MudSwitch Value="_appBarIsDense" T="bool" ValueChanged="OnAppBarDensityChanged" Label="Dense appbar"
               Color="Color.Primary"/>
</MudContainer>