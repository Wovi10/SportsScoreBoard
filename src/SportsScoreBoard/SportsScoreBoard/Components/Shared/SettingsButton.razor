<MudButton OnClick="HandleClick" Color="@(Active ? Color.Primary : Color.Secondary)" Variant="Variant.Filled"
           Disabled="Disabled">
    @Text
</MudButton>

@code
{
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public bool Active { get; set; } = true;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public required EventCallback<MouseEventArgs> OnClick { get; set; }

    private async Task HandleClick(MouseEventArgs e)
        => await OnClick.InvokeAsync(e);
}
