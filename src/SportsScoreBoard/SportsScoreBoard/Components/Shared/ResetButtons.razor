<MudStack Row="true" Class="mb-3">
    <SettingsButton OnClick="ResetGame" Text="Reset game" Visible="GameVisible"/>
    <SettingsButton OnClick="ResetScore" Text="Reset scores" Visible="ScoreVisible"/>
    <SettingsButton OnClick="ResetSets" Text="Reset sets" Visible="SetsVisible"/>
    <SettingsButton OnClick="ResetTimeouts" Text="Reset timeouts" Visible="TimeoutsVisible"/>
    <SettingsButton OnClick="ResetTimer" Text="Reset timer" Visible="TimerVisible"/>
    <SettingsButton OnClick="ResetNames" Text="Reset names" Visible="NamesVisible"/>
</MudStack>

@code{
    [Parameter] public required Models.Enums.ResetButtons[] VisibleButtons { get; set; }
    [Parameter] public required EventCallback ResetGame { get; set; }
    [Parameter] public required EventCallback ResetScore { get; set; }
    [Parameter] public required EventCallback ResetSets { get; set; }
    [Parameter] public required EventCallback ResetTimeouts { get; set; }
    [Parameter] public required EventCallback ResetTimer { get; set; }
    [Parameter] public required EventCallback ResetNames { get; set; }

    private bool IsVisible(Models.Enums.ResetButtons button)
        => VisibleButtons.Contains(button);

    private bool GameVisible => IsVisible(Models.Enums.ResetButtons.Game);
    private bool ScoreVisible => IsVisible(Models.Enums.ResetButtons.Score);
    private bool SetsVisible => IsVisible(Models.Enums.ResetButtons.Sets);
    private bool TimeoutsVisible => IsVisible(Models.Enums.ResetButtons.Timeouts);
    private bool TimerVisible => IsVisible(Models.Enums.ResetButtons.Timer);
    private bool NamesVisible => IsVisible(Models.Enums.ResetButtons.Names);

}