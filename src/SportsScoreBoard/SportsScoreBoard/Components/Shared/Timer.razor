@if (Settings.ShowTimer)
{
    <MudText Typo="Typo.h3" Align="Align.Center" @onclick="OnTimerStateChanged" Style="cursor: pointer">
        <MudIconButton Icon="@(_timerOperation.IsRecurring ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)"
                       OnClick="OnTimerStateChanged"
                       Class="align-center"/>
        @_displayTime
    </MudText>
}
