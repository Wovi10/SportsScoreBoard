@using SportsScoreBoard.Models
<MudTextField T="string" Variant="Variant.Text" ValueChanged="OnTeamNameChange" Value="@Team.Name"/>

@code
{
  [Parameter] public required TeamBase Team { get; set; }
  [Parameter] public required EventCallback<string> ChangeTeamName { get; set; }

  public async Task OnTeamNameChange(string name)
      => await ChangeTeamName.InvokeAsync(name);
}
